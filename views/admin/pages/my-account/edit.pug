extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1 Chỉnh sửa
  +alert-error(2000)
  form(
    action=`/${prefixAdmin}/my-account/edit?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Họ và tên
      input(
        type="text"
        id="fullName"
        name="fullName"
        class="form-control"
        value=user.fullName
        required
      )
    div(class="form-group")
      label(for="email") Email
      input(
        type="email"
        id="email"
        name="email"
        class="form-control"
        value=user.email
        required
      )
    div(class="form-group")
      label(for="password") Mật khẩu
      input(
        type="password"
        id="password"
        name="password"
        class="form-control"
        value=user.password
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        id="phone"
        name="phone"
        class="form-control"
        value=user.phone
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=user.avatar
        class="image-preview"
        upload-image-preview
      )
      .btn.btn-light(
        class="button-close-preview d-none"
      ) Huỷ
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhập