extends ../../layouts/default

block main
  if(role.permissions.includes("roles_edit"))
    h1 Chỉnh sửa
    form(
      action=`/${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
      method="POST"
      class="form-group"
    ) 
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
          value=data.title
        )
      div(class="form-group")
        label(for="description") Mô tả
        input(
          type="text"
          class="form-control"
          id="description"
          name="description"
          value=data.description
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhập
  else 
    div Chưa có quyền truy cập